server {
    listen ${NGINX_SSL_REDIRECT_PORT};
    server_name ${NGINX_SERVER_NAME};

    # Hide Nginx version
    server_tokens off;

    # Health check endpoint (for load balancers / Docker HEALTHCHECK)
    location = /health {
        access_log off;
        return 200 "OK\n";
        add_header Content-Type text/plain;
    }

    # Redirect all other requests to HTTPS
    location / {
        return 301 https://@@host:${NGINX_SSL_PORT}@@request_uri;
    }
}
